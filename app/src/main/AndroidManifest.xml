<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vahitkeskin.kotlinwhatsappclone">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/vhticon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/vhticon"
        android:supportsRtl="true"
        android:theme="@style/Theme.KotlinWhatsAppClone">
        <activity android:name=".view.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.SettingsActivity" />
        <activity android:name=".view.GroupChatActivity" />
        <activity android:name=".view.ChatDetailActivity" />
        <activity android:name=".view.SignInActivity" />
        <activity android:name=".view.SignUpActivity" />
        <activity android:name=".view.MainActivity" />
    </application>

</manifest>